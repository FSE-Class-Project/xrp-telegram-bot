# XRP Telegram Bot Configuration
# Copy this file to .env.development for local development

# Environment
ENVIRONMENT=development
DEBUG=true

# Telegram Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_development_bot_token_here

# Leave empty for local development (uses polling)
# TELEGRAM_WEBHOOK_URL=

# Database Configuration
# Local SQLite for development
DATABASE_URL=sqlite:///./xrp_bot_dev.db

# For local PostgreSQL (optional):
# DATABASE_URL=postgresql://user:password@localhost/xrp_bot_dev

# Security
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=generate_your_own_key_here

# Generate random secrets for local development
JWT_SECRET=your_jwt_secret_here
BOT_API_KEY=your_bot_api_key_here
ADMIN_API_KEY=your_admin_api_key_here

# Optional: for webhook verification (not needed in dev)
# TELEGRAM_WEBHOOK_SECRET=

# XRP Ledger (TestNet)
XRP_NETWORK=testnet
XRP_WEBSOCKET_URL=wss://s.altnet.rippletest.net:51233
XRP_JSON_RPC_URL=https://s.altnet.rippletest.net:51234
XRP_FAUCET_URL=https://faucet.altnet.rippletest.net/accounts
XRP_FAUCET_FUNDING_AMOUNT=1000.0
XRP_AUTO_FUND_NEW_WALLETS=true

# API Configuration (Local Development)
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000

# External APIs
PRICE_API_URL=https://api.coingecko.com/api/v3
# Get your free API key from CoinGecko (optional)
PRICE_API_KEY=

# Redis (optional for local development, recommended for production)
# For local development:
# REDIS_URL=redis://localhost:6379/0
# For production (Redis Cloud/Render Redis):
# REDIS_URL=rediss://username:password@host:port

# Sentry (error tracking - production only)
# Get your DSN from https://sentry.io
# SENTRY_DSN=https://your-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
